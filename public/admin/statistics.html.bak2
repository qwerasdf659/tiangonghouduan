<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>数据统计报表 - 管理后台</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/admin/css/common.css" rel="stylesheet">
  <style>
    .trend-up { color: #28a745; }
    .trend-down { color: #dc3545; }
    .export-btn {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 1000;
    }
    .chart-container {
      position: relative;
      height: 280px;
    }
  </style>
</head>
<body class="bg-light" x-data="statisticsPage()">
  <!-- 顶部导航 -->
  <nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
      <a href="/admin/dashboard.html" class="navbar-brand">
        <i class="bi bi-arrow-left me-2"></i>📊 管理后台 - 数据统计报表
      </a>
      <div>
        <span class="text-light me-3" x-text="'欢迎，' + (userInfo.nickname || '管理员')">欢迎，管理员</span>
        <button class="btn btn-outline-light btn-sm" @click="logout">退出登录</button>
      </div>
    </div>
  </nav>
  
  <div class="container-fluid mt-4">
    <!-- 时间范围选择 -->
    <div class="card mb-3">
      <div class="card-body">
        <div class="row g-3 align-items-end">
          <div class="col-md-3">
            <label class="form-label">统计周期</label>
            <select class="form-select" x-model="filters.period" @change="onPeriodChange">
              <option value="today">今日</option>
              <option value="yesterday">昨日</option>
              <option value="week">本周</option>
              <option value="month">本月</option>
              <option value="custom">自定义</option>
            </select>
          </div>
          <div class="col-md-3" x-show="filters.period === 'custom'" x-transition>
            <label class="form-label">开始日期</label>
            <input type="date" class="form-control" x-model="filters.startDate">
          </div>
          <div class="col-md-3" x-show="filters.period === 'custom'" x-transition>
            <label class="form-label">结束日期</label>
            <input type="date" class="form-control" x-model="filters.endDate">
          </div>
          <div class="col-md-3">
            <button class="btn btn-primary w-100" @click="loadStatistics" :disabled="loading">
              <span x-show="!loading"><i class="bi bi-search"></i> 查询</span>
              <span x-show="loading"><span class="spinner-border spinner-border-sm"></span> 加载中...</span>
            </button>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 核心指标总览 -->
    <div class="row g-3 mb-4">
      <div class="col-12">
        <h5><i class="bi bi-bar-chart-fill"></i> 核心指标总览</h5>
      </div>
      
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <div>
                <h6 class="text-muted mb-0">总用户数</h6>
                <h2 class="mt-2 mb-0" x-text="formatNumber(stats.totalUsers)">-</h2>
              </div>
              <div class="text-primary" style="font-size: 2rem;">
                <i class="bi bi-people-fill"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <span :class="stats.userTrend >= 0 ? 'trend-up me-2' : 'trend-down me-2'">
                <i :class="stats.userTrend >= 0 ? 'bi bi-arrow-up' : 'bi bi-arrow-down'"></i>
                <span x-text="(stats.userTrend >= 0 ? '+' : '') + stats.userTrend.toFixed(1) + '%'"></span>
              </span>
              <small class="text-muted">较上期</small>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <div>
                <h6 class="text-muted mb-0">总抽奖次数</h6>
                <h2 class="mt-2 mb-0" x-text="formatNumber(stats.totalDraws)">-</h2>
              </div>
              <div class="text-success" style="font-size: 2rem;">
                <i class="bi bi-gift-fill"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <span :class="stats.drawTrend >= 0 ? 'trend-up me-2' : 'trend-down me-2'">
                <i :class="stats.drawTrend >= 0 ? 'bi bi-arrow-up' : 'bi bi-arrow-down'"></i>
                <span x-text="(stats.drawTrend >= 0 ? '+' : '') + stats.drawTrend.toFixed(1) + '%'"></span>
              </span>
              <small class="text-muted">较上期</small>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <div>
                <h6 class="text-muted mb-0">高档奖励率</h6>
                <h2 class="mt-2 mb-0" x-text="stats.winRate.toFixed(2) + '%'">-</h2>
              </div>
              <div class="text-warning" style="font-size: 2rem;">
                <i class="bi bi-trophy-fill"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <span :class="stats.winRateTrend >= 0 ? 'trend-up me-2' : 'trend-down me-2'">
                <i :class="stats.winRateTrend >= 0 ? 'bi bi-arrow-up' : 'bi bi-arrow-down'"></i>
                <span x-text="(stats.winRateTrend >= 0 ? '+' : '') + stats.winRateTrend.toFixed(1) + '%'"></span>
              </span>
              <small class="text-muted">较上期</small>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <div>
                <h6 class="text-muted mb-0">总消费金额</h6>
                <h2 class="mt-2 mb-0" x-text="'¥' + stats.totalRevenue.toFixed(2)">-</h2>
              </div>
              <div class="text-danger" style="font-size: 2rem;">
                <i class="bi bi-currency-dollar"></i>
              </div>
            </div>
            <div class="d-flex align-items-center">
              <span :class="stats.revenueTrend >= 0 ? 'trend-up me-2' : 'trend-down me-2'">
                <i :class="stats.revenueTrend >= 0 ? 'bi bi-arrow-up' : 'bi bi-arrow-down'"></i>
                <span x-text="(stats.revenueTrend >= 0 ? '+' : '') + stats.revenueTrend.toFixed(1) + '%'"></span>
              </span>
              <small class="text-muted">较上期</small>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- ECharts 数据趋势图表 -->
    <div class="row g-3 mb-4">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-graph-up"></i> 数据趋势分析</h6>
          </div>
          <div class="card-body">
            <div x-ref="trendChart" class="chart-container"></div>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-pie-chart"></i> 用户类型分布</h6>
          </div>
          <div class="card-body">
            <div x-ref="userTypeChart" class="chart-container"></div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 用户数据统计 -->
    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-people"></i> 用户数据统计</h6>
          </div>
          <div class="card-body">
            <table class="table table-sm mb-0">
              <tbody>
                <tr>
                  <td>新增用户</td>
                  <td class="text-end fw-bold" x-text="formatNumber(userStats.newUsers)">-</td>
                </tr>
                <tr>
                  <td>活跃用户</td>
                  <td class="text-end fw-bold" x-text="formatNumber(userStats.activeUsers)">-</td>
                </tr>
                <tr>
                  <td>管理员用户</td>
                  <td class="text-end fw-bold" x-text="formatNumber(userStats.adminUsers)">-</td>
                </tr>
                <tr>
                  <td>普通用户</td>
                  <td class="text-end fw-bold text-muted" x-text="formatNumber(userStats.regularUsers)">-</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-gift"></i> 抽奖数据统计</h6>
          </div>
          <div class="card-body">
            <table class="table table-sm mb-0">
              <tbody>
                <tr>
                  <td>抽奖总次数</td>
                  <td class="text-end fw-bold" x-text="formatNumber(lotteryStats.totalDraws)">-</td>
                </tr>
                <tr>
                  <td>高档奖励次数</td>
                  <td class="text-end fw-bold text-success" x-text="formatNumber(lotteryStats.highTierWins)">-</td>
                </tr>
                <tr>
                  <td>普通奖励次数</td>
                  <td class="text-end fw-bold text-muted" x-text="formatNumber(lotteryStats.regularWins)">-</td>
                </tr>
                <tr>
                  <td>高档奖励率</td>
                  <td class="text-end fw-bold text-warning" x-text="lotteryStats.winRate.toFixed(2) + '%'">-</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 消费与积分统计 -->
    <div class="row g-3 mb-4">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-cash-stack"></i> 消费数据统计</h6>
          </div>
          <div class="card-body">
            <table class="table table-sm mb-0">
              <tbody>
                <tr>
                  <td>总消费金额</td>
                  <td class="text-end fw-bold text-primary" x-text="'¥' + consumptionStats.total.toFixed(2)">-</td>
                </tr>
                <tr>
                  <td>审核通过</td>
                  <td class="text-end fw-bold text-success" x-text="'¥' + consumptionStats.approved.toFixed(2)">-</td>
                </tr>
                <tr>
                  <td>待审核</td>
                  <td class="text-end fw-bold text-warning" x-text="'¥' + consumptionStats.pending.toFixed(2)">-</td>
                </tr>
                <tr>
                  <td>已拒绝</td>
                  <td class="text-end fw-bold text-danger" x-text="'¥' + consumptionStats.rejected.toFixed(2)">-</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-star-fill"></i> 积分数据统计</h6>
          </div>
          <div class="card-body">
            <table class="table table-sm mb-0">
              <tbody>
                <tr>
                  <td>总发放积分</td>
                  <td class="text-end fw-bold text-primary" x-text="formatNumber(pointsStats.issued)">-</td>
                </tr>
                <tr>
                  <td>总消耗积分</td>
                  <td class="text-end fw-bold text-danger" x-text="formatNumber(pointsStats.consumed)">-</td>
                </tr>
                <tr>
                  <td>当前总积分</td>
                  <td class="text-end fw-bold text-success" x-text="formatNumber(pointsStats.current)">-</td>
                </tr>
                <tr>
                  <td>平均每用户积分</td>
                  <td class="text-end fw-bold text-info" x-text="formatNumber(pointsStats.average)">-</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 奖品发放统计 -->
    <div class="row g-3 mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-box-seam"></i> 奖品发放统计</h6>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>奖品名称</th>
                    <th>类型</th>
                    <th>发放数量</th>
                    <th>领取数量</th>
                    <th>领取率</th>
                    <th>总价值</th>
                  </tr>
                </thead>
                <tbody>
                  <template x-if="loading">
                  <tr>
                    <td colspan="6" class="text-center py-4">
                      <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">加载中...</span>
                      </div>
                    </td>
                  </tr>
                  </template>
                  <template x-if="!loading && prizeStats.length === 0">
                    <tr>
                      <td colspan="6" class="text-center py-4">
                        <i class="bi bi-inbox text-muted" style="font-size: 2rem;"></i>
                        <p class="mt-2 text-muted">暂无奖品数据</p>
                      </td>
                    </tr>
                  </template>
                  <template x-for="prize in prizeStats" :key="prize.prize_name">
                    <tr>
                      <td x-text="prize.prize_name || '未知奖品'"></td>
                      <td><span class="badge bg-primary">抽奖</span></td>
                      <td x-text="formatNumber(prize.count)"></td>
                      <td x-text="formatNumber(prize.count)"></td>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="progress flex-fill me-2" style="height: 20px;">
                            <div class="progress-bar" 
                                 :class="getProgressColor(prize.percentage)"
                                 :style="'width: ' + Math.min(prize.percentage, 100) + '%'" 
                                 role="progressbar"
                                 x-text="prize.percentage.toFixed(1) + '%'"></div>
                          </div>
                        </div>
                      </td>
                      <td class="text-muted">-</td>
                    </tr>
                  </template>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- 活跃时段统计 -->
    <div class="row g-3 mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header bg-white">
            <h6 class="mb-0"><i class="bi bi-clock-history"></i> 活跃时段统计</h6>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-3">
                <div class="text-center p-3">
                  <h4 class="text-primary mb-1" x-text="formatNumber(activeHoursStats.totalActivity)">-</h4>
                  <small class="text-muted">总活跃次数</small>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center p-3">
                  <h4 class="text-success mb-1" x-text="formatNumber(activeHoursStats.activeHourCount)">-</h4>
                  <small class="text-muted">活跃时段数</small>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center p-3">
                  <h4 class="text-warning mb-1" x-text="activeHoursStats.peakHour">-</h4>
                  <small class="text-muted">最活跃时段</small>
                </div>
              </div>
              <div class="col-md-3">
                <div class="text-center p-3">
                  <h4 class="text-info mb-1" x-text="activeHoursStats.coverageRate">-</h4>
                  <small class="text-muted">活跃覆盖率</small>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 浮动导出按钮 -->
  <div class="export-btn">
    <div class="btn-group-vertical">
      <button class="btn btn-success" @click="exportToExcel" title="导出Excel" :disabled="exporting">
        <i class="bi bi-file-earmark-excel"></i> 导出Excel
      </button>
      <button class="btn btn-danger" @click="exportToPDF" title="导出PDF" :disabled="exporting">
        <i class="bi bi-file-earmark-pdf"></i> 导出PDF
      </button>
    </div>
  </div>
  
  <!-- 加载遮罩层 -->
  <div class="loading-overlay" :class="{ 'show': loading }">
    <div class="spinner-border text-light" style="width: 3rem; height: 3rem;" role="status">
      <span class="visually-hidden">处理中...</span>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/js/lib/echarts.min.js"></script>
  <script src="/admin/js/admin-common.js"></script>
  <script src="/admin/js/api-config.js"></script>
  <script src="/admin/js/alpine/init.js"></script>
  <script src="/admin/js/pages/statistics.js"></script>
  
  <!-- Alpine.js -->
  <script defer src="/admin/js/vendor/alpine.min.js"></script>
</body>
</html>
