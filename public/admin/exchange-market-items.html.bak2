<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>兑换市场商品管理 - 管理后台</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/admin/css/common.css" rel="stylesheet">
  <style>
    .price-badge { font-size: 0.875rem; padding: 0.25rem 0.75rem; }
    .stock-warning { color: #ff6b6b; }
    .stock-low { color: #ffa500; }
    .stock-ok { color: #51cf66; }
  </style>
</head>
<body class="bg-light" x-data="exchangeMarketItemsPage()">
  <nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
      <a href="/admin/dashboard.html" class="navbar-brand">
        <i class="bi bi-arrow-left me-2"></i>🛒 兑换市场 - 商品管理
      </a>
      <div>
        <span class="text-light me-3" x-text="'欢迎，' + (userInfo.nickname || '管理员')">欢迎，管理员</span>
        <button class="btn btn-outline-light btn-sm" @click="logout">退出登录</button>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-4">
    <!-- 操作区域 -->
    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-0"><i class="bi bi-shop"></i> 兑换商品管理</h5>
            <small class="text-muted">管理用户可兑换的官方商品</small>
          </div>
          <button class="btn btn-primary" @click="openAddModal">
            <i class="bi bi-plus-lg"></i> 添加商品
          </button>
        </div>
      </div>
    </div>

    <!-- 统计信息 -->
    <div class="row g-3 mb-3">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body text-center">
            <h6 class="text-muted">商品总数</h6>
            <h3 class="text-primary" x-text="stats.total">-</h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body text-center">
            <h6 class="text-muted">上架商品</h6>
            <h3 class="text-success" x-text="stats.active">-</h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body text-center">
            <h6 class="text-muted">库存预警</h6>
            <h3 class="text-warning" x-text="stats.lowStock">-</h3>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body text-center">
            <h6 class="text-muted">总兑换次数</h6>
            <h3 class="text-info" x-text="stats.totalSold">-</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- 筛选区域 -->
    <div class="card mb-3">
      <div class="card-body">
        <div class="row g-3">
          <div class="col-md-3">
            <label class="form-label">状态筛选</label>
            <select class="form-select" x-model="filters.status">
              <option value="">全部状态</option>
              <option value="active">上架</option>
              <option value="inactive">下架</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">支付资产类型</label>
            <select class="form-select" x-model="filters.cost_asset_code">
              <option value="">全部类型</option>
              <template x-for="asset in assetTypes" :key="asset.asset_code">
                <option :value="asset.asset_code" x-text="asset.display_name + ' (' + asset.asset_code + ')'"></option>
              </template>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">排序方式</label>
            <select class="form-select" x-model="filters.sort_by">
              <option value="sort_order">按排序号</option>
              <option value="created_at">按创建时间</option>
              <option value="stock">按库存</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">&nbsp;</label>
            <button class="btn btn-primary w-100" @click="handleSearch">
              <i class="bi bi-search"></i> 查询
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- 数据表格 -->
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th style="width: 60px;">ID</th>
                <th>商品信息</th>
                <th>支付资产</th>
                <th>消耗数量</th>
                <th>库存</th>
                <th>已售</th>
                <th>状态</th>
                <th>排序</th>
                <th style="width: 200px;">操作</th>
              </tr>
            </thead>
            <tbody>
              <template x-if="loading">
              <tr>
                <td colspan="9" class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                  <p class="mt-2 text-muted">正在加载数据...</p>
                </td>
              </tr>
              </template>
              <template x-if="!loading && items.length === 0">
                <tr>
                  <td colspan="9" class="text-center text-muted py-4">暂无数据</td>
                </tr>
              </template>
              <template x-for="item in items" :key="item.id || item.item_id">
                <tr>
                  <td x-text="item.id || item.item_id"></td>
                  <td>
                    <div><strong x-text="item.name"></strong></div>
                    <small class="text-muted" x-text="item.description || ''"></small>
                  </td>
                  <td>
                    <span class="badge bg-info" x-text="getAssetDisplayName(item.cost_asset_code)"></span>
                  </td>
                  <td><span class="badge bg-warning text-dark" x-text="item.cost_amount || 0"></span></td>
                  <td>
                    <span :class="getStockClass(item.stock)" x-text="item.stock"></span>
                  </td>
                  <td x-text="item.sold_count || 0"></td>
                  <td>
                    <span class="badge" :class="item.status === 'active' ? 'bg-success' : 'bg-secondary'"
                          x-text="item.status === 'active' ? '上架' : '下架'"></span>
                  </td>
                  <td x-text="item.sort_order"></td>
                  <td>
                    <button class="btn btn-sm btn-outline-primary" @click="editItem(item.id || item.item_id)">
                      <i class="bi bi-pencil"></i> 编辑
                    </button>
                    <button class="btn btn-sm btn-outline-danger" @click="deleteItem(item.id || item.item_id)">
                      <i class="bi bi-trash"></i> 删除
                    </button>
                  </td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>

        <!-- 分页 -->
        <nav aria-label="分页" class="mt-3" x-show="pagination && pagination.total_pages > 1">
          <ul class="pagination justify-content-end">
            <li class="page-item" :class="{ 'disabled': currentPage === 1 }">
              <a class="page-link" href="#" @click.prevent="changePage(currentPage - 1)">上一页</a>
            </li>
            <template x-for="page in visiblePages" :key="page">
              <li class="page-item" :class="{ 'active': page === currentPage, 'disabled': page === '...' }">
                <a class="page-link" href="#" @click.prevent="page !== '...' && changePage(page)" x-text="page"></a>
              </li>
            </template>
            <li class="page-item" :class="{ 'disabled': currentPage === pagination?.total_pages }">
              <a class="page-link" href="#" @click.prevent="changePage(currentPage + 1)">下一页</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- 添加商品模态框 -->
  <div class="modal fade" id="addItemModal" tabindex="-1" x-ref="addModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-plus-circle"></i> 添加兑换商品</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form @submit.prevent="handleAddItem" id="addItemForm">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">商品名称 <span class="text-danger">*</span></label>
                <input type="text" class="form-control" x-model="addForm.item_name" required maxlength="100">
              </div>
              <div class="col-md-6">
                <label class="form-label">支付资产类型 <span class="text-danger">*</span></label>
                <select class="form-select" x-model="addForm.cost_asset_code" required>
                  <option value="">请选择材料资产...</option>
                  <template x-for="asset in assetTypes" :key="asset.asset_code">
                    <option :value="asset.asset_code" x-text="asset.display_name + ' (' + asset.asset_code + ')'"></option>
                  </template>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">商品描述</label>
                <textarea class="form-control" x-model="addForm.item_description" rows="3" maxlength="500"></textarea>
              </div>
              <div class="col-md-6">
                <label class="form-label">材料消耗数量 <span class="text-danger">*</span></label>
                <input type="number" class="form-control" x-model.number="addForm.cost_amount" min="1" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">成本价 <span class="text-danger">*</span></label>
                <input type="number" class="form-control" x-model.number="addForm.cost_price" min="0" step="0.01" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">初始库存 <span class="text-danger">*</span></label>
                <input type="number" class="form-control" x-model.number="addForm.stock" min="0" required>
              </div>
              <div class="col-md-4">
                <label class="form-label">排序号</label>
                <input type="number" class="form-control" x-model.number="addForm.sort_order">
              </div>
              <div class="col-md-4">
                <label class="form-label">商品状态</label>
                <select class="form-select" x-model="addForm.status">
                  <option value="active">上架</option>
                  <option value="inactive">下架</option>
                </select>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
          <button type="submit" form="addItemForm" class="btn btn-primary" :disabled="submitting">
            <span x-show="submitting" class="spinner-border spinner-border-sm me-1"></span>
            <i class="bi bi-check-lg" x-show="!submitting"></i> 添加
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- 编辑商品模态框 -->
  <div class="modal fade" id="editItemModal" tabindex="-1" x-ref="editModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-pencil-square"></i> 编辑商品</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form @submit.prevent="handleEditItem" id="editItemForm">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">商品名称 <span class="text-danger">*</span></label>
                <input type="text" class="form-control" x-model="editForm.item_name" required maxlength="100">
              </div>
              <div class="col-md-6">
                <label class="form-label">支付资产类型 <span class="text-danger">*</span></label>
                <select class="form-select" x-model="editForm.cost_asset_code" required>
                  <option value="">请选择材料资产...</option>
                  <template x-for="asset in assetTypes" :key="asset.asset_code">
                    <option :value="asset.asset_code" x-text="asset.display_name + ' (' + asset.asset_code + ')'"></option>
                  </template>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">商品描述</label>
                <textarea class="form-control" x-model="editForm.item_description" rows="3"></textarea>
              </div>
              <div class="col-md-6">
                <label class="form-label">材料消耗数量</label>
                <input type="number" class="form-control" x-model.number="editForm.cost_amount" min="1" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">成本价</label>
                <input type="number" class="form-control" x-model.number="editForm.cost_price" min="0" step="0.01">
              </div>
              <div class="col-md-4">
                <label class="form-label">当前库存</label>
                <input type="number" class="form-control" x-model.number="editForm.stock" min="0">
              </div>
              <div class="col-md-4">
                <label class="form-label">排序号</label>
                <input type="number" class="form-control" x-model.number="editForm.sort_order">
              </div>
              <div class="col-md-4">
                <label class="form-label">商品状态</label>
                <select class="form-select" x-model="editForm.status">
                  <option value="active">上架</option>
                  <option value="inactive">下架</option>
                </select>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
          <button type="submit" form="editItemForm" class="btn btn-primary" :disabled="submitting">
            <span x-show="submitting" class="spinner-border spinner-border-sm me-1"></span>
            <i class="bi bi-check-lg" x-show="!submitting"></i> 保存
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="loading-overlay" :class="{ 'show': globalLoading }">
    <div class="spinner-border text-light" style="width: 3rem; height: 3rem;" role="status">
      <span class="visually-hidden">处理中...</span>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/js/admin-common.js"></script>
  <script src="/admin/js/api-config.js"></script>
  <script src="/admin/js/pages/exchange-market-items.js"></script>
  
  <!-- Alpine.js -->
  <script defer src="/admin/js/vendor/alpine.min.js"></script>
</body>
</html>
