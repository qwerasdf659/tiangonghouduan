<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>门店管理 - 管理后台</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
  <link href="/admin/css/common.css" rel="stylesheet">
  <style>
    .store-card {
      transition: all 0.3s ease;
      border-left: 4px solid #0d6efd;
    }
    .store-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    .store-card.inactive {
      border-left-color: #6c757d;
      opacity: 0.7;
    }
    .address-text {
      font-size: 0.85rem;
      color: #6c757d;
    }
  </style>

  <!-- Alpine.js -->
  <script defer src="/admin/js/vendor/alpine.min.js"></script>

  <style>
    [x-cloak] { display: none !important; }
  </style>
</head>
<body class="bg-light" x-data="storesPage()" x-cloak>
  <nav class="navbar navbar-dark bg-primary">
    <div class="container-fluid">
      <a href="/admin/dashboard.html" class="navbar-brand">
        <i class="bi bi-arrow-left me-2"></i>🏪 管理后台 - 门店管理
      </a>
      <div>
        <span class="text-light me-3" x-text="'欢迎，' + (userInfo?.nickname || '管理员')">欢迎，管理员</span>
        <button class="btn btn-outline-light btn-sm" @click="logout">退出登录</button>
      </div>
    </div>
  </nav>

  <div class="container-fluid mt-4">
    <!-- 统计卡片 -->
    <div class="row g-3 mb-4">
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body text-center">
            <i class="bi bi-shop text-primary" style="font-size: 2rem;"></i>
            <h6 class="text-muted mt-2">门店总数</h6>
            <h2 class="text-primary mb-0" x-text="statistics.total">-</h2>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body text-center">
            <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
            <h6 class="text-muted mt-2">营业中</h6>
            <h2 class="text-success mb-0" x-text="statistics.active">-</h2>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body text-center">
            <i class="bi bi-pause-circle text-secondary" style="font-size: 2rem;"></i>
            <h6 class="text-muted mt-2">已停业</h6>
            <h2 class="text-secondary mb-0" x-text="statistics.inactive">-</h2>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card stat-card">
          <div class="card-body text-center">
            <i class="bi bi-hourglass-split text-warning" style="font-size: 2rem;"></i>
            <h6 class="text-muted mt-2">待审核</h6>
            <h2 class="text-warning mb-0" x-text="statistics.pending">-</h2>
          </div>
        </div>
      </div>
    </div>

    <!-- 筛选和操作栏 -->
    <div class="card mb-4">
      <div class="card-body">
        <div class="row g-3 align-items-center">
          <div class="col-md-3">
            <label class="form-label">门店状态</label>
            <select class="form-select" x-model="filters.status">
              <option value="">全部状态</option>
              <option value="active">营业中</option>
              <option value="inactive">已停业</option>
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">搜索</label>
            <input type="text" class="form-control" x-model="filters.search" 
                   @keypress.enter="loadStores" placeholder="搜索门店名称或地址...">
          </div>
          <div class="col-md-3 d-flex align-items-end">
            <button class="btn btn-primary me-2" @click="loadStores">
              <i class="bi bi-search"></i> 搜索
            </button>
            <button class="btn btn-success" @click="openCreateModal">
              <i class="bi bi-plus-lg"></i> 新增门店
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- 门店列表 -->
    <div class="row">
      <!-- 加载中状态 -->
      <template x-if="loading && stores.length === 0">
        <div class="col-12 text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">加载中...</span>
          </div>
          <p class="mt-2 text-muted">正在加载数据...</p>
        </div>
      </template>
      
      <!-- 空状态 -->
      <template x-if="!loading && stores.length === 0">
        <div class="col-12">
          <div class="card">
            <div class="card-body text-center py-5">
              <i class="bi bi-shop text-muted" style="font-size: 4rem;"></i>
              <h5 class="text-muted mt-3">暂无门店</h5>
              <p class="text-muted">点击上方"新增门店"按钮添加</p>
            </div>
          </div>
        </div>
      </template>
      
      <!-- 门店卡片列表 -->
      <template x-for="store in stores" :key="store.store_id">
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card store-card h-100" :class="{ 'inactive': store.status !== 'active' }">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h6 class="mb-0">
                <i class="bi bi-shop me-2"></i>
                <span x-text="store.store_name || '未命名门店'"></span>
              </h6>
              <span class="badge" :class="store.status === 'active' ? 'bg-success' : 'bg-secondary'"
                    x-text="store.status_name || (store.status === 'active' ? '营业中' : '已停业')"></span>
            </div>
            <div class="card-body">
              <p class="address-text mb-2">
                <i class="bi bi-geo-alt"></i> 
                <span x-text="store.full_region_name || ''"></span>
              </p>
              <p class="address-text mb-2" x-text="store.store_address || '-'"></p>
              <p class="mb-2">
                <i class="bi bi-telephone text-primary"></i> 
                <span x-text="store.contact_mobile || '-'"></span>
              </p>
              <p class="mb-0">
                <i class="bi bi-person text-info"></i> 
                <span x-text="store.contact_name || '-'"></span>
              </p>
            </div>
            <div class="card-footer bg-white">
              <button class="btn btn-sm btn-outline-primary me-1" @click="viewStoreDetail(store.store_id)">
                <i class="bi bi-eye"></i> 详情
              </button>
              <button class="btn btn-sm btn-outline-warning me-1" @click="editStore(store.store_id)">
                <i class="bi bi-pencil"></i> 编辑
              </button>
              <button class="btn btn-sm" 
                      :class="store.status === 'active' ? 'btn-outline-secondary' : 'btn-outline-success'"
                      @click="toggleStoreStatus(store.store_id, store.status)">
                <i class="bi" :class="store.status === 'active' ? 'bi-pause' : 'bi-play'"></i>
                <span x-text="store.status === 'active' ? '停业' : '营业'"></span>
              </button>
            </div>
          </div>
        </div>
      </template>
    </div>
  </div>

  <!-- 门店表单模态框 -->
  <div class="modal fade" id="storeModal" tabindex="-1" x-ref="storeModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">
            <i class="bi" :class="storeForm.id ? 'bi-pencil' : 'bi-shop'"></i>
            <span x-text="storeForm.id ? '编辑门店' : '新增门店'"></span>
          </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form x-ref="storeFormEl">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="form-label">门店名称 <span class="text-danger">*</span></label>
                <input type="text" class="form-control" x-model="storeForm.store_name" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">联系电话</label>
                <input type="text" class="form-control" x-model="storeForm.contact_mobile">
              </div>
              <div class="col-md-6">
                <label class="form-label">省份 <span class="text-danger">*</span></label>
                <select class="form-select" x-model="storeForm.province_code" @change="loadCities" required>
                  <option value="">请选择省份</option>
                  <template x-for="province in provinces" :key="province.region_code">
                    <option :value="province.region_code" x-text="province.region_name"></option>
                  </template>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">城市 <span class="text-danger">*</span></label>
                <select class="form-select" x-model="storeForm.city_code" @change="loadDistricts" required>
                  <option value="">请先选择省份</option>
                  <template x-for="city in cities" :key="city.region_code">
                    <option :value="city.region_code" x-text="city.region_name"></option>
                  </template>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">区县</label>
                <select class="form-select" x-model="storeForm.district_code" @change="loadStreets">
                  <option value="">请先选择城市</option>
                  <template x-for="district in districts" :key="district.region_code">
                    <option :value="district.region_code" x-text="district.region_name"></option>
                  </template>
                </select>
              </div>
              <div class="col-md-6">
                <label class="form-label">街道</label>
                <select class="form-select" x-model="storeForm.street_code">
                  <option value="">请先选择区县</option>
                  <template x-for="street in streets" :key="street.region_code">
                    <option :value="street.region_code" x-text="street.region_name"></option>
                  </template>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">详细地址 <span class="text-danger">*</span></label>
                <input type="text" class="form-control" x-model="storeForm.store_address" required>
              </div>
              <div class="col-md-6">
                <label class="form-label">联系人</label>
                <input type="text" class="form-control" x-model="storeForm.contact_name" placeholder="联系人姓名">
              </div>
              <div class="col-md-6">
                <label class="form-label">门店状态</label>
                <select class="form-select" x-model="storeForm.status">
                  <option value="active">营业中</option>
                  <option value="inactive">已停业</option>
                </select>
              </div>
              <div class="col-12">
                <label class="form-label">备注</label>
                <textarea class="form-control" x-model="storeForm.notes" rows="2"></textarea>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
          <button type="button" class="btn btn-primary" @click="submitStore">保存</button>
        </div>
      </div>
    </div>
  </div>

  <!-- 门店详情模态框 -->
  <div class="modal fade" id="storeDetailModal" tabindex="-1" x-ref="storeDetailModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"><i class="bi bi-info-circle"></i> 门店详情</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <template x-if="selectedStore">
            <div>
              <div class="row">
                <div class="col-md-6">
                  <table class="table table-sm">
                    <tr><th style="width:40%">门店ID</th><td x-text="selectedStore.store_id"></td></tr>
                    <tr><th>门店编号</th><td x-text="selectedStore.store_code || '-'"></td></tr>
                    <tr><th>门店名称</th><td x-text="selectedStore.store_name || '-'"></td></tr>
                    <tr><th>联系电话</th><td x-text="selectedStore.contact_mobile || '-'"></td></tr>
                    <tr><th>联系人</th><td x-text="selectedStore.contact_name || '-'"></td></tr>
                    <tr>
                      <th>状态</th>
                      <td>
                        <span class="badge" :class="selectedStore.status === 'active' ? 'bg-success' : 'bg-secondary'"
                              x-text="selectedStore.status_name || (selectedStore.status === 'active' ? '营业中' : '已停业')"></span>
                      </td>
                    </tr>
                  </table>
                </div>
                <div class="col-md-6">
                  <table class="table table-sm">
                    <tr><th style="width:40%">省份</th><td x-text="selectedStore.province_name || '-'"></td></tr>
                    <tr><th>城市</th><td x-text="selectedStore.city_name || '-'"></td></tr>
                    <tr><th>区县</th><td x-text="selectedStore.district_name || '-'"></td></tr>
                    <tr><th>街道</th><td x-text="selectedStore.street_name || '-'"></td></tr>
                    <tr><th>详细地址</th><td x-text="selectedStore.store_address || '-'"></td></tr>
                  </table>
                </div>
              </div>
              <div class="mt-3" x-show="selectedStore.total_staff !== undefined">
                <h6>员工统计</h6>
                <p x-text="'在职员工: ' + (selectedStore.staff_counts?.active || 0) + ' | 停职: ' + (selectedStore.staff_counts?.inactive || 0) + ' | 待审核: ' + (selectedStore.staff_counts?.pending || 0)"></p>
              </div>
              <div class="mt-3">
                <h6>备注</h6>
                <p class="text-muted" x-text="selectedStore.notes || '无'"></p>
              </div>
              <div class="row text-muted small">
                <div class="col-6">创建时间：<span x-text="formatDateTime(selectedStore.created_at)"></span></div>
                <div class="col-6">更新时间：<span x-text="formatDateTime(selectedStore.updated_at)"></span></div>
              </div>
            </div>
          </template>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭</button>
        </div>
      </div>
    </div>
  </div>

  <div class="loading-overlay" :class="{ 'show': globalLoading }">
    <div class="spinner-border text-light" style="width: 3rem; height: 3rem;" role="status">
      <span class="visually-hidden">加载中...</span>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/admin/js/admin-common.js"></script>
  <script src="/admin/js/api-config.js"></script>
  
  <!-- ✅ 页面专属逻辑 (Alpine.js 组件) -->
  <script src="/admin/js/pages/stores.js"></script>
  
  <!-- ✅ Alpine.js -->
</body>
</html>
