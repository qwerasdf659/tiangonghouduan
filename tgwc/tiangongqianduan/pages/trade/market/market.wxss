    0 12rpx 40rpx rgba(102, 126, 234, 0.15),
    0 4rpx 16rpx rgba(0, 0, 0, 0.08),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.8);
  transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  will-change: transform, box-shadow;
  backface-visibility: hidden;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(20rpx);
}

.waterfall-card:active {
  transform: scale(0.96) translateY(-4rpx);
  box-shadow:
    0 20rpx 60rpx rgba(102, 126, 234, 0.25),
    0 8rpx 32rpx rgba(118, 75, 162, 0.15),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.9);
}

.waterfall-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.4) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
  z-index: 1;
}

.waterfall-card:hover::before {
  opacity: 1;
}

