.welcome-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99999;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
  backdrop-filter: blur(5rpx);
}

.welcome-modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.welcome-modal {
  width: 640rpx;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  transform: scale(0.8);
  transition: transform 0.3s ease;
}

.welcome-modal-mask.show .welcome-modal {
  transform: scale(1);
}

.welcome-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333333;
  display: block;
}

.welcome-content {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #666666;
  display: block;
  margin-bottom: 30rpx;
}

.welcome-features {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 15rpx;
}

.feature-item {
  font-size: 26rpx;
  color: #666666;
  padding: 8rpx 16rpx;
  background: rgba(255, 107, 53, 0.1);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 107, 53, 0.2);
}

.welcome-actions {
  display: flex;
  gap: 24rpx;
  justify-content: center;
}

.welcome-btn {
  flex: 1;
  padding: 32rpx 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.welcome-btn.secondary {
  background: #f5f5f5;
  color: #666666;
}

.welcome-btn.secondary:active {
  background: #e0e0e0;
}

.welcome-btn.primary {
  background: linear-gradient(135deg, #ff6b35, #f7931e);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.welcome-btn.primary:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

