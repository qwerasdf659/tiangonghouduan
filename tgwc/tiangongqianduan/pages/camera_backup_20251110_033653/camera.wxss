/* pages/camera/camera.wxss - 发现页面样式 */

.discover-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  padding-bottom: 80rpx;
}

/* 页面头部 */
.header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.welcome {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.points-info {
  display: flex;
  gap: 30rpx;
}

.points-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.points-label {
  font-size: 28rpx;
  color: #666;
}

.points-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #667eea;
}

.points-item.frozen .points-label {
  color: #999;
}

.points-value.frozen {
  color: #f39c12;
}

/* 统计信息卡片 */
.statistics-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stat-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.stat-value.pending {
  color: #f39c12;
}

.stat-value.approved {
  color: #27ae60;
}

.stat-value.rejected {
  color: #e74c3c;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 筛选栏 */
.filter-bar {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
  white-space: nowrap;
  padding: 10rpx 0;
}

.filter-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 50rpx;
  padding: 16rpx 32rpx;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  transition: all 0.3s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.filter-item.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.filter-icon {
  font-size: 28rpx;
}

.filter-name {
  font-size: 28rpx;
  color: #333;
}

.filter-item.active .filter-name {
  color: #fff;
}

/* 记录列表 */
.records-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 空状态 */
.empty-state {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.empty-icon {
  font-size: 100rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.qrcode-btn {
  margin-top: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  border: none;
}

/* 记录项 */
.record-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.3s;
}

.record-item:active {
  transform: scale(0.98);
}

/* 记录头部 */
.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.merchant-info {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.merchant-icon {
  font-size: 32rpx;
}

.merchant-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #fff;
}

.status-badge.status-pending {
  background: #f39c12;
}

.status-badge.status-approved {
  background: #27ae60;
}

.status-badge.status-rejected {
  background: #e74c3c;
}

/* 记录内容 */
.record-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.content-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.content-row .label {
  font-size: 26rpx;
  color: #666;
}

.content-row .value {
  font-size: 26rpx;
  color: #333;
}

.value.amount {
  font-size: 32rpx;
  font-weight: bold;
  color: #e74c3c;
}

.value.points {
  font-size: 30rpx;
  font-weight: bold;
  color: #667eea;
}

.value.time {
  font-size: 24rpx;
  color: #999;
}

.value.approved {
  color: #27ae60;
}

.value.rejected {
  color: #e74c3c;
}

.value.reason {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
}

/* 记录提示 */
.record-tip {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx dashed #f0f0f0;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.tip-icon {
  font-size: 24rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #f39c12;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 底部提示 */
.bottom-tip {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.bottom-tip .tip-icon {
  font-size: 32rpx;
}

.bottom-tip .tip-text {
  font-size: 26rpx;
  color: #667eea;
  font-weight: 500;
}

/* 加载状态 */
.loading-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
  padding: 40rpx 60rpx;
  z-index: 1000;
}

.loading-text {
  font-size: 28rpx;
  color: #fff;
}
