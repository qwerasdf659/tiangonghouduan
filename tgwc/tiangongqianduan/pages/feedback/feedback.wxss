/* üé® ÂÖ®Â±ÄÂÆπÂô® */
.feedback-container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* üìã È°µÈù¢Â§¥ÈÉ® */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  color: white;
}

.header-title .title {
  font-size: 36rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.header-title .subtitle {
  font-size: 26rpx;
  opacity: 0.8;
  display: block;
}

.history-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.history-btn .icon {
  font-size: 28rpx;
}

/* üìù Ë°®ÂçïÂå∫Âùó */
.section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 24rpx;
}

.section-title .title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
}

.section-title .required {
  color: #e74c3c;
  font-size: 32rpx;
  font-weight: 600;
}

.section-title .optional {
  color: #95a5a6;
  font-size: 24rpx;
}

.section-title .more {
  color: #3498db;
  font-size: 24rpx;
  margin-left: auto;
  cursor: pointer;
}

/* üè∑Ô∏è ÂàÜÁ±ªÈÄâÊã© */
.category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 12rpx;
  border: 2rpx solid #ecf0f1;
  border-radius: 12rpx;
  background-color: #fafbfc;
  transition: all 0.3s ease;
  cursor: pointer;
}

.category-item.selected {
  border-color: #3498db;
  background-color: #ebf3fd;
}

.category-item .icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  display: block;
}

.category-item .label {
  font-size: 24rpx;
  color: #2c3e50;
  text-align: center;
  display: block;
}

/* üìù ÂÜÖÂÆπËæìÂÖ• */
.content-input-container {
  position: relative;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #ecf0f1;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #fafbfc;
  box-sizing: border-box;
}

.content-input:focus {
  border-color: #3498db;
  background-color: white;
}

.input-footer {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.char-count {
  font-size: 24rpx;
  color: #95a5a6;
}

.char-count.limit {
  color: #e74c3c;
}

/* üì∑ ÂõæÁâá‰∏ä‰º† */
.image-upload-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.image-item .image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  border: 2rpx solid #ecf0f1;
}

.delete-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: #e74c3c;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  cursor: pointer;
}

.add-image-btn {
  width: 160rpx;
  height: 160rpx;
  border: 2rpx dashed #bdc3c7;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fafbfc;
  cursor: pointer;
  transition: all 0.3s ease;
}

.add-image-btn:hover {
  border-color: #3498db;
  background-color: #ebf3fd;
}

.add-image-btn .icon {
  font-size: 48rpx;
  color: #bdc3c7;
  margin-bottom: 8rpx;
  display: block;
}

.add-image-btn .text {
  font-size: 24rpx;
  color: #7f8c8d;
  display: block;
}

/* üöÄ Êèê‰∫§Âå∫Âüü */
.submit-section {
  padding: 40rpx 24rpx;
  text-align: center;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.submit-btn.enabled {
  background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
  color: white;
}

.submit-btn.disabled {
  background-color: #bdc3c7;
  color: #95a5a6;
}

.submit-tips {
  margin-top: 24rpx;
}

.submit-tips .tip {
  font-size: 24rpx;
  color: #7f8c8d;
}

/* üìã ÂéÜÂè≤ËÆ∞ÂΩïÈ¢ÑËßà */
.feedback-history-preview {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #3498db;
  cursor: pointer;
  transition: all 0.3s ease;
}

.history-item:hover {
  background-color: #ebf3fd;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.item-header .category {
  font-size: 24rpx;
  color: #7f8c8d;
}

.item-header .status {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
}

.status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.status.replied {
  background-color: #d1ecf1;
  color: #0c5460;
}

.status.closed {
  background-color: #d4edda;
  color: #155724;
}

.history-item .content {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.4;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-item .time {
  font-size: 22rpx;
  color: #95a5a6;
  display: block;
}

/* üîÑ Ê®°ÊÄÅÊ°ÜÊ†∑Âºè */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-width: 640rpx;
  max-height: 80vh;
  background-color: white;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  transform: scale(0.9);
  transition: all 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: scale(1);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  border-bottom: 2rpx solid #ecf0f1;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #95a5a6;
  cursor: pointer;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.close-btn:hover {
  background-color: #ecf0f1;
}

.modal-body {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
}

.loading-state,
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  color: #95a5a6;
}

.empty-state .icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
  display: block;
}

.empty-state .message {
  font-size: 28rpx;
  display: block;
}

.feedback-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.feedback-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  border: 2rpx solid #ecf0f1;
  border-radius: 12rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.feedback-item:hover {
  border-color: #3498db;
  background-color: #ebf3fd;
}

.item-status .status-badge {
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  font-weight: 500;
  white-space: nowrap;
}

.item-content {
  flex: 1;
  min-width: 0;
}

.item-content .content {
  font-size: 26rpx;
  color: #2c3e50;
  line-height: 1.4;
  display: block;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-content .time {
  font-size: 22rpx;
  color: #95a5a6;
  display: block;
}

.item-arrow {
  color: #bdc3c7;
  font-size: 28rpx;
  font-weight: 600;
}

.modal-footer {
  padding: 24rpx;
  border-top: 2rpx solid #ecf0f1;
}

.view-all-btn {
  width: 100%;
  height: 76rpx;
  background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
  color: white;
  border: none;
  border-radius: 38rpx;
  font-size: 28rpx;
  font-weight: 500;
}

/* üéØ ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 640rpx) {
  .category-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .image-upload-container {
    justify-content: space-between;
  }

  .image-item,
  .add-image-btn {
    width: 200rpx;
    height: 200rpx;
  }
}
