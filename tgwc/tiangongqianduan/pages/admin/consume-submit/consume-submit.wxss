/* pages/admin/consume-submit/consume-submit.wxss */

.consume-container {
  min-height: 100vh;
  background: linear-gradient(to bottom, #fff5f0 0%, #ffffff 200rpx);
  padding: 40rpx 30rpx 100rpx 30rpx;
}

/* 页面标题 */
.page-title {
  text-align: center;
  font-size: 44rpx;
  font-weight: bold;
  color: #ff6b35;
  margin-bottom: 50rpx;
}

/* 用户信息展示区域 */
.user-info-section {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 加载状态 */
.info-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  animation: rotate 2s linear infinite;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 用户信息内容 */
.user-info-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.info-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.info-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

/* 加载失败提示 */
.info-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  background: #fff5f5;
  border-radius: 16rpx;
}

.error-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 28rpx;
  color: #ff4d4f;
  text-align: center;
}

/* 表单项 */
.form-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.1);
}

.form-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.form-label.required::after {
  content: ' *';
  color: #ff4d4f;
  font-weight: normal;
}

/* 金额输入 */
.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-wrapper:focus-within {
  border-color: #ff6b35;
  background: #fff;
}

.currency-symbol {
  font-size: 32rpx;
  color: #ff6b35;
  font-weight: bold;
  margin-right: 12rpx;
}

.amount-input {
  flex: 1;
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

/* 备注输入 */
.notes-input {
  width: 100%;
  min-height: 180rpx;
  max-height: 300rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.notes-input:focus {
  border-color: #ff6b35;
  background: #fff;
}

/* 表单提示 */
.form-tips {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  line-height: 1.4;
}

.form-hint {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #ff6b35;
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: #fff5f0;
  border-radius: 12rpx;
  border-left: 4rpx solid #ff6b35;
}

/* 提交按钮 */
.submit-wrapper {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx 30rpx 30rpx;
  background: linear-gradient(to top, #ffffff 80%, rgba(255, 255, 255, 0));
  z-index: 10;
}

.submit-button {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #ff6b35 0%, #ff8c5a 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s;
}

.submit-button:active {
  transform: translateY(2rpx);
  box-shadow: 0 6rpx 16rpx rgba(255, 107, 53, 0.3);
}

.submit-button.disabled {
  background: linear-gradient(135deg, #cccccc 0%, #dddddd 100%);
  box-shadow: none;
  color: #999;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 30rpx;
}

.loading-content text {
  font-size: 28rpx;
  color: #333;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f0f0f0;
  border-top-color: #ff6b35;
  border-radius: 50%;
  animation: rotate 1s linear infinite;
}
