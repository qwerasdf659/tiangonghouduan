  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  cursor: pointer;
  position: relative;
  overflow: hidden;
}

.filter-tab::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: var(--primary-gradient);
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: var(--border-radius);
}

.filter-tab:hover::before {
  opacity: 0.1;
}

.filter-tab.active {
  background: var(--primary-gradient);
  color: white;
  transform: translateY(-4rpx) scale(1.05);
  box-shadow:
    0 12rpx 32rpx rgba(102, 126, 234, 0.25),
    0 6rpx 16rpx rgba(102, 126, 234, 0.15);
  border-color: rgba(255, 255, 255, 0.3);
}

.filter-tab.active::before {
  opacity: 0;
}

.filter-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
  position: relative;
  z-index: 2;
  transition: all 0.3s ease;
}

.filter-tab.active .filter-icon {
  transform: scale(1.2);
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 255, 255, 0.3));
}

.filter-text {
  font-size: 24rpx;
