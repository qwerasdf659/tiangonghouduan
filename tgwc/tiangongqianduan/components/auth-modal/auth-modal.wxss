/* components/auth-modal/auth-modal.wxss - 登录认证模态框样式 - 根据迁移文档v1.0.0重构 */

.auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
}

.modal-content {
  background: white;
  border-radius: 24rpx;
  width: 90%;
  max-width: 600rpx;
  max-height: 80vh;
  overflow-y: auto;
  position: relative;
  animation: modalShow 0.3s ease-out;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.7) translateY(-50rpx);
  }

  to {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 标题区域 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  background: #f8f9fa;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.close-btn:active {
  background: #e9ecef;
  transform: scale(0.95);
}

/* 验证方式切换 */
.auth-tabs {
  display: flex;
  padding: 20rpx 40rpx;
  gap: 16rpx;
}

.tab-btn {
  flex: 1;
  background: #f8f9fa;
  border: none;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #666;
  transition: all 0.3s ease;
}

.tab-btn.active {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

/* 输入组 */
.input-group {
  padding: 0 40rpx 30rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 600;
}

.auth-input {
  width: 100%;
  padding: 24rpx 20rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fff;
  transition: all 0.3s ease;
}

.auth-input:focus {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.auth-input::placeholder {
  color: #ccc;
}

/* 验证码输入容器 */
.code-input-container {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.code-input {
  flex: 1;
}

.send-code-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 32rpx;
  font-size: 24rpx;
  font-weight: 600;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.send-code-btn:not([disabled]):active {
  transform: scale(0.98);
}

.send-code-btn.disabled {
  background: #ccc;
  color: #999;
}

/* 密码输入容器 */
.password-input-container {
  position: relative;
  display: flex;
  align-items: center;
}

.password-input {
  flex: 1;
  padding-right: 80rpx;
}

.password-toggle {
  position: absolute;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.password-toggle:active {
  background: rgba(0, 0, 0, 0.1);
  transform: scale(0.95);
}

/* 提示文本 */
.tips-text {
  padding: 0 40rpx 20rpx;
}

.tips-text text {
  font-size: 22rpx;
  color: #999;
  line-height: 1.4;
}

/* 忘记密码 */
.forgot-password {
  padding: 0 40rpx 30rpx;
  text-align: right;
}

.forgot-password text {
  font-size: 24rpx;
  color: #667eea;
  text-decoration: underline;
}

/* 操作按钮 */
.modal-footer {
  padding: 20rpx 40rpx 40rpx;
  display: flex;
  gap: 20rpx;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
}

.cancel-btn:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.confirm-btn {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.confirm-btn:not([disabled]):active {
  transform: scale(0.98);
}

.confirm-btn.disabled {
  background: #ccc;
  color: #999;
  box-shadow: none;
}

/* 首次使用提示 */
.first-use-tips {
  background: linear-gradient(135deg, #fff3cd, #ffeaa7);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.tips-icon {
  font-size: 48rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #856404;
}

.tips-content {
  font-size: 24rpx;
  color: #856404;
  text-align: center;
  line-height: 1.5;
}

/* 手机验证区域 */
.phone-auth,
.password-auth {
  padding-bottom: 20rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .modal-content {
    width: 95%;
  }

  .modal-header {
    padding: 30rpx;
  }

  .input-group {
    padding: 0 30rpx 25rpx;
  }

  .modal-footer {
    padding: 15rpx 30rpx 30rpx;
  }

  .first-use-tips {
    margin: 20rpx 30rpx 0;
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .modal-content {
    background: #2c2c2c;
  }

  .modal-title {
    color: #fff;
  }

  .input-label {
    color: #ccc;
  }

  .auth-input {
    background: #3c3c3c;
    border-color: #555;
    color: #fff;
  }

  .auth-input::placeholder {
    color: #999;
  }

  .tips-text text {
    color: #aaa;
  }
}
