/* components/qrcode/qrcode.wxss - 用户身份二维码组件样式 */

.qrcode-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
}

/* 标题区域 */
.qrcode-header {
  margin-bottom: 20rpx;
}

.qrcode-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 二维码包装器 */
.qrcode-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 300rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 加载状态 */
.qrcode-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 二维码图片 */
.qrcode-image {
  width: 100%;
  height: 100%;
}

/* Canvas画布（隐藏） */
.qrcode-canvas {
  position: absolute;
  left: -9999px;
  top: -9999px;
  opacity: 0;
  pointer-events: none;
}

/* 错误提示 */
.qrcode-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  padding: 20rpx;
}

.error-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.error-text {
  font-size: 24rpx;
  color: #f56c6c;
  text-align: center;
  line-height: 1.5;
}

/* 用户信息 */
.qrcode-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  width: 100%;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* 操作按钮 */
.qrcode-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}

.refresh-btn {
  background: #409eff;
  color: #fff;
}

.save-btn {
  background: #67c23a;
  color: #fff;
}
