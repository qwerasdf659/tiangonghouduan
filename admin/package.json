{
  "name": "restaurant-lottery-admin",
  "version": "2.0.0",
  "description": "餐厅积分抽奖系统 - 管理后台前端 (Vite + Alpine.js + Tailwind CSS)",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:mappings": "node scripts/check-frontend-mappings.js",
    "lint:all": "npm run lint && npm run lint:mappings",
    "format": "prettier --write \"src/**/*.{js,html,css}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css}\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "alpinejs": "^3.15.4",
    "echarts": "^6.0.0",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "glob": "^10.3.10",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^3.4.19",
    "vite": "^6.4.1",
    "vite-plugin-ejs": "^1.7.0"
  }
}
